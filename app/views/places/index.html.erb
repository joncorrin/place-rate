<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h2>Place Rate is the best way to find places and rate them!</h2>
  <h3>Make sure to checkout and rate all of your favorite places.<br>
      Restaurants, gyms, you name it, we got it, you rate it.</h3>
</div>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th>Website</th>
      <% if user_signed_in? && current_user.admin? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= link_to place.name, place %></td>
        <td><%= place.city %></td>
        <td><%= place.state %></td>
        <td><%= link_to place.website, place.website %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_place_path(place) %></td>
          <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'New Place', new_place_path, class: "btn btn-link"  %>
<% end %>
